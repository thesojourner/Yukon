<SCRIPT>
function combat() {
    //get values
    var rf1 = $("#rf1").val();
    var rf2 = $("#rf2").val();
    var rh1 = $("#rh1").val();
    var rh2 = $("#rh2").val();

    var mf1 = $("#mf1").val();
    var mf2 = $("#mf2").val();
    var mh1 = $("#mh1").val();
    var mh2 = $("#mh2").val();

    var if1 = $("#if1").val();
    var if2 = $("#if2").val();
    var ih1 = $("#ih1").val();
    var ih2 = $("#ih2").val();

    var s1 = $("#s1").val();
    var s2 = $("#s2").val();

    var t = $("#t").val();

    var strat = rmi(s1, s2);
    alert("strat: " + strat);

    //set values
    $("#rf1").val(orf1);
    $("#rf2").val(orf2);
    $("#rh1").val(orh1);
    $("#rh2").val(orh2);

    $("#mf1").val(omf1);
    $("#mf2").val(omf2);
    $("#mh1").val(omh1);
    $("#mh2").val(omh2);

    $("#if1").val(oif1);
    $("#if2").val(oif2);
    $("#ih1").val(oih1);
    $("#ih2").val(oih2);
}

function rmi(p1, p2) {
    if(p1 == p2) {
       return 0;
    } else if (p1 > p2) {
       if(p1 - p2 == 1) {
           return 1;
       } else {
           return 2;
       }
    } else {
       if(p2 - p1 == 1) {
           return 2;
       } else {
           return 1;
       }
    }
}
